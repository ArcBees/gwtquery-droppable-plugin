<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
				margin: 5px;
				padding-left: 3px;
				font-size: 14px;
				font-weight: bold;
		}
		
		.content {
				margin: 5px;
		}
	</ui:style>

	<g:VerticalPanel>
		<g:Label ui:field="header" addStyleNames="{style.header}" />
		<g:SimplePanel ui:field="popupContent" addStyleNames="{style.content}" />
		<g:HorizontalPanel>
			<g:Button ui:field="closeButton">Apply</g:Button>
			<g:Button ui:field="resetButton">Reset to default</g:Button>
		</g:HorizontalPanel>
	</g:VerticalPanel>

</ui:UiBinder>  